@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/BaseManage/Views/Shared/_Layout_M.cshtml";
}
@model Model.Orgnizations

@{
    ViewBag.Title = "Create";
}

<h2>新增组织机构</h2>
<style>
    .text-danger {
        color:red;
    }
</style>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div>
        <h4 >新增组织机构</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
            <div>
                @Html.LabelFor(model => model.OrgName)
                @Html.EditorFor(model => model.OrgName, new { htmlAttributes = new { @placeholder = "你的组织机构名字.."} })  
                @Html.ValidationMessageFor(model => model.OrgName, "", new { @class = "text-danger" })
            </div>

            <div>
                @Html.LabelFor(model => model.OrgDuty)
                <div>
                    @Html.EditorFor(model => model.OrgDuty, new { htmlAttributes = new { @placeholder = "你的组织机构职责.." } })
                    @Html.ValidationMessageFor(model => model.OrgDuty, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.OrgDes)
                <div>
                    @Html.TextAreaFor(model => model.OrgDes, new { htmlAttributes = new { @placeholder = "你的组织机构描述.." } })
                    @Html.ValidationMessageFor(model => model.OrgDes, "", new { @class = "text-danger" })
                </div>
            </div>

          
            <div>
                <div >
                    <input type="submit" value="提交" class="btn btn-default" />
                </div>
            </div>
</div>
}

<div>
    @Html.ActionLink("返回列表", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
